# Server Configuration
PORT=3000
NODE_ENV=production

# Sandbox Configuration
# Set to false in production to disable automatic cleanup
SANDBOX_MODE=true

# Logging Configuration
LOG_LEVEL=info
DEBUG=true


# WhatsApp Configuration
# Available modes: 'single', 'multi', 'both'
# - single: Only legacy single-instance mode
# - multi: Only multi-instance mode (default)
# - both: Both modes running simultaneously
WHATSAPP_MODE=multi

# Database
DATABASE_URL="mongodb://localhost:27017/whisper-api?replicaSet=rs0"
